name: Resolve Same Day Conflict
on:
  issue_comment:
    types: [created]
jobs:
  solve_conflict:
  runs-on: ubuntu-latest
  if: github.event.issue.pull_request != '' && contains(github.event.comment.body, '/resolve_day')
  steps:
    - name: Check out main branch
      uses: actions/checkout@v3
      with:
        ref: "main"
